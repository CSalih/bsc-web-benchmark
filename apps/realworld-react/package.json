{
  "name": "realworld-react",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "dev": "vite --port 4002",
    "build": "tsc && vite build",
    "build:docker": "docker build -t bsc/react-realworld:latest ../.. --file Dockerfile",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "prettier": "@bsc-web-benchmark/prettier-config",
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.6",
    "history": "^5.3.0",
    "marked": "^13.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-router": "^6.25.1",
    "react-router-dom": "^6.25.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-redux": "^7.1.33",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/src/helpers/testsHelpers.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
